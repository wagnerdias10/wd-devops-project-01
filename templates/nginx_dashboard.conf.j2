# Internal monitoring dashboard
# dashboard.wd.local.conf.j2
# Configuracao para o Dashboard de servicos (HTML estatico)
server {
    listen 80;
    listen [::]:80;
    server_name dashboard.{{ internal_domain }};

    limit_req zone=general burst=20 nodelay;
    limit_conn addr 10;

    access_log /var/log/nginx/sites/dashboard.access.log main;
    error_log /var/log/nginx/sites/dashboard.error.log;

    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name dashboard.{{ internal_domain }};

    ssl_certificate /etc/nginx/ssl/wildcard_chain.crt;
    ssl_certificate_key /etc/nginx/ssl/wildcard.{{ internal_domain }}.key;

    limit_req zone=general burst=20 nodelay;
    limit_conn addr 10;

    access_log /var/log/nginx/sites/dashboard.access.log main;
    error_log /var/log/nginx/sites/dashboard.error.log;

    root /var/www/dashboard; # Diretrio onde o HTML do dashboard esta
    index index.html;

    location / {
        try_files $uri $uri/ =404; # Serve arquivos estaticos
    }
}