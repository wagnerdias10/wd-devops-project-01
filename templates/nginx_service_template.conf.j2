# NGINX Configuration para {{ item.name }}.{{ internal_domain }}
# Gerado para infraestrutura SSL centralizada e proxy reverso.

# Definição do backend (upstream) para o serviço
upstream {{ item.name }}_backend {
    server {{ item.ip }}:{{ item.port }} max_fails=3 fail_timeout=30s;
    keepalive 32;
}

# Redirecionamento HTTP para HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name {{ item.name }}.{{ internal_domain }};

    # Rate limiting
    limit_req zone=general burst=20 nodelay;
    limit_conn addr 10;

    # Logs
    access_log /var/log/nginx/sites/{{ item.name }}.access.log main;
    error_log /var/log/nginx/sites/{{ item.name }}.error.log;

    return 301 https://$server_name$request_uri;
}

# Servidor HTTPS para {{ item.name }}
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ item.name }}.{{ internal_domain }};

    # Certificados SSL
    ssl_certificate /etc/nginx/ssl/wildcard_chain.crt;
    ssl_certificate_key /etc/nginx/ssl/wildcard.{{ internal_domain }}.key;

    # Rate limiting
    limit_req zone=general burst=20 nodelay;
    limit_conn addr 10;

    # Logs
    access_log /var/log/nginx/sites/{{ item.name }}.access.log main;
    error_log /var/log/nginx/sites/{{ item.name }}.error.log;

    ###########################################################################
    # Configurações de Upload (CORRIGIDAS — sem duplicação)
    ###########################################################################
    {% if item.name == "gitlab" %}
    client_max_body_size 0;   # GitLab requer uploads ilimitados
    chunked_transfer_encoding on;
    {% else %}
    client_max_body_size 100m;  # Valor padrão para serviços normais
    {% endif %}

    proxy_read_timeout 600;
    proxy_connect_timeout 600;
    proxy_send_timeout 600;

    # Headers de segurança
    add_header X-Service-Name "{{ item.name }}" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    ###########################################################################
    # Rota principal
    ###########################################################################
    location / {
        proxy_pass http://{{ item.name }}_backend;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Port $server_port;
        proxy_set_header X-Forwarded-Host $host;

        proxy_set_header X-Forwarded-Ssl on;
        proxy_redirect http:// https://;

        # WebSocket
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
    }

    ###########################################################################
    # GitLab Registry (somente para item.name == gitlab)
    ###########################################################################
    {% if item.name == "gitlab" %}
    location /v2/ {
        proxy_pass http://{{ item.ip }}:{{ item.registry_port }};

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Ssl on;
        proxy_set_header X-Forwarded-Port 443;
        proxy_set_header X-Forwarded-Host $host;
        proxy_redirect off;

        # Docker Registry headers
        proxy_set_header Docker-Content-Digest $upstream_http_docker_content_digest;
        proxy_set_header Docker-Distribution-Api-Version registry/2.0;

        # Uploads ilimitados no registry (permitido em outro bloco)
        client_max_body_size 0;
        chunked_transfer_encoding on;
    }
    {% endif %}

    ###########################################################################
    # Healthcheck
    ###########################################################################
    location /health {
        access_log off;
        proxy_pass http://{{ item.name }}_backend/health;
        proxy_connect_timeout 5s;
        proxy_read_timeout 5s;
    }
}